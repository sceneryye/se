<%if params[:platform]!='mobile'%>
<div class="products clearfix">
<%=render 'menu_tree'%>
<%end%>
<div class="right">
<section style="width:100%;margin:45px auto 0;overflow:hidden;">
  <div class="user">

    <!--账户管理begin-->
    <div class="account order">
      <h2><%=@cate.name%></h2>
      <ul>
        <%@pages.each do |page|%>
        <li><%=link_to page.title, page_path(page,:platform=>params[:platform])%>
            <a class="link"><span class="more"><span class="inner"></span></span></a> </li>
        </li>
        <%end%>

      </ul>
    </div>
    <!--账户管理end-->

  </div>
</section>
</div>

<%= form_for :good,:url => @action_url,:method=>@method,:html => {:class => "form-horizontal"} do |f| %>
  <fieldset>

    <div class="form-group">
      <%= f.label :cat_id, "商品分类", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%=f.select :cat_id, Ecstore::Category.all.collect {|cat| [cat.full_path_name, cat.cat_id] },{:include_blank=>"请选择"},{:class=>"form-control span3", :style => 'margin-left:0;'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :p_order, "排序", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :p_order,:class=>"form-control "%>
      </div>
    </div>
     <div class="form-group">
      <%= f.label :weight, "重量", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :weight,:class=>"form-control", :placeholder => '千克'%>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :name, "商品名称", :class => "control-label col-md-1" %>
      <div class="col-md-6">
          <!-- <span class="plain"><%=@good.name%></span> -->
          <%= f.text_field :name,:class=>"form-control "%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :share, "分享佣金", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :share,:class=>"form-control "%>例如：0.01=>售价的1%
      </div>
    </div>

    <div class="form-group">
      <%= f.label :bn, "商品编号", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :bn,:class=>"form-control "%>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :medium_pic, "中图", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%#=form_for :good,:url=>uploadpic_admin_goods_path,:html => {:multipart => true} ,:method=>:post do |f|%>
            <%#= file_field :good, :file, :id=>'csvfile',:accept => "application/msexcel",:class=>"batch" %>
            <%#= f.submit '上传图片(780x1100)', :class => "btn btn-primary" %>
        <%#end%>
        <%= f.text_field :medium_pic,:class=>"form-control "%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :big_pic, "大图", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :big_pic,:class=>"form-control "%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :price, "会员价", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.number_field :price, :class => 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :mktprice, "市场价", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.number_field :mktprice, :class => 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :store, "库存", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.number_field :store, :class => 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :marketable, "立即上架", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <label class="radio inline"><%= f.radio_button :marketable,'true'%>是</label>
        <label class="radio inline"><%= f.radio_button :marketable,'false'%>否</label>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :uptime, "定时上下架", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <label class="radio inline"><%= f.radio_button :up_or_down,true%>定时上架</label>
        <label class="radio inline"><%= f.radio_button :up_or_down,false%>定时下架</label>
        &nbsp;&nbsp;&nbsp;&nbsp;
        <%=f.text_field :uptime, :value=>@good.up_at, :class=>"form-control datetime"%>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :desc, "商品描述", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.cktext_area :desc, :toolbar => 'Easy',:language=>'zh-cn',:height => 100,:width=>800 %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :place_info, "产地", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :place_info,:class=>"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :spec_info, "规格说明", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.text_field :spec_info,:class=>"form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :intro, "商品详情", :class => "control-label col-md-1" %>
      <div class="col-md-6">
        <%= f.cktext_area :intro, :toolbar => 'Easy',:language=>'zh-cn',:height => 200,:width=>800  %>
      </div>
    </div>

    <%=render :partial=>"admin/shared/metable", :locals=>{ :form => f, :resource=> @good }%>

<div class="clear" style="clear:both"></div>

    <div class="form-group" style="margin-top: 20px;">
      <div class="col-md-6 col-md-offset-5">
        <%= f.submit '确定', :class => "btn btn-primary" %>
        <%= link_to '返回', admin_goods_path,:class=>"btn" %>
      </div>
    </div>
  </fieldset>
<% end %>

